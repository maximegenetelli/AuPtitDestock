{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    <div class="container my-5 col-md-5">


        {% if app.user %}
            <div class="container mt-4 alert alert-dismissible alert-warning">Vous êtes déjà connecté avec {{ app.user.userIdentifier }}, <a class="text-info" href="{{ path('app_logout') }}">Vous deconnecter ?</a></div>
        {% endif %}

        {% if error %}
            <div class="container alert alert-dismissible alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h1>Connexion</h1>

        <form action="{{ path('app_login') }}" method="post">
            <label for="username">Votre email:</label>
            <input class="form-control" type="text" id="username" name="_username">

            <label class="mt-3" for="password">Votre mot de passe:</label>
            <input class="form-control" type="password" id="password" name="_password">

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="btn btn-success mt-3 w-100" type="submit">Me connecter</button>
        </form>

        <br>

        Vous n'avez pas de compte ?<a href="{{ path('app_register') }}"> Inscrivez vous</a>

    </div>

{% endblock %}
