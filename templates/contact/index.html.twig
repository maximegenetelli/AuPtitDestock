{% extends 'base.html.twig' %}

{% block title %}Nous contacter{% endblock %}

{% block body %}
<link rel="stylesheet" href="css/contact.css">
<script src={{ asset('js/index.js') }} defer></script>

<div class="conteneur">
    <form id="form">
    <h3>Contactez-nous</h3>
        <div class="input">
            <label for="firstname">Pr√©nom<span class="obligatory">*</span></label>
            <input type="text" id="firstname" name="firstname">
            <span class="error" id="firstnameError"></span>
        </div>
        
        <div class="input">
            <label for="lastname">Nom<span class="obligatory">*</span></label>
            <input type="text" id="lastname" name="lastname">
            <span class="error" id="lastnameError"></span>
        </div>

        <div class="input">
            <label for="email">Email<span class="obligatory">*</span></label>
            <input type="text" id="email" name="email">
            <span class="error" id="emailError"></span>
        </div>

        <div class="input">
            <label for="message">Votre message<span class="obligatory">*</span></label>
            <textarea name="message" id="message" rows="5" cols="50"></textarea>
            <span class="error" id="messageError"></span>
        </div>

        <button type="submit">Envoyer</button>

    </form>
</div>
    
{% endblock %}
