{% extends 'base.html.twig' %}

{% block title %}Nos produits{% endblock %}

{% block body %}

<div class="container mt-5">
    <li class="nav-item nav-link dropdown">
        <a style="width: fit-content;" class="nav-link dropdown-toggle text-info bg-light fs-5" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Filtrer par cat√©gorie : </a>
        <div class="dropdown-menu">
        {% for category in categorys %}
            <a class="dropdown-item" href={{ path('app_product_by_slug', { slug: category.slug }) }}>{{ category.name }}</a>
        {% endfor %}
        </div>
    </li>
</div>
    
    

    <div class="container my-5">
        <div class="row  row-cols-sm-2 row-cols-md-4 g-4">
            {% for product in products %}
                        <div class="col">
                            <div class="card shadow-sm">
                                <img src="/uploads/{{ product.illustration }}" class="img-fluid" alt="{{ product.name }}">
                                <div class="card-body">
                                <p class="card-text">{{ product.name }}</p>
                                <small>{{ product.price|price }}</small>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a href={{ path('app_product_detail', { slug: product.slug }) }} class="btn btn-outline-info">Voir</a>
                                    </div>
                                </div>
                                </div>
                            </div>
                        </div>
            {% endfor %}
        </div>
    </div>
    

{% endblock %}
